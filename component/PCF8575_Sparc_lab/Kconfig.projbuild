            0X44    // A[2]A[1]A[0] = 010 
            0X46    // A[2]A[1]A[0] = 011 
            0X48    // A[2]A[1]A[0] = 100 
            0X4A    // A[2]A[1]A[0] = 101 
            0x4C    // A[2]A[1]A[0] = 110 
            0x4E    // A[2]A[1]A[0] = 111 




